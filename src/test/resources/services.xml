<?xml version = "1.0" encoding = "UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
 	http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-4.3.xsd">
	
    <bean id ="keymgr" class="com.softwareplumbers.keymanager.KeyManager" scope="singleton">
        <constructor-arg index="0" value="/tmp/doctane-proxy.keystore"/>
	<constructor-arg index="1" value="password"/>
		<!-- for some reason specifying a value attribute here does not work -->
	<constructor-arg index="2"><value>com.softwareplumbers.dms.rest.server.core.SystemSecretKeys</value></constructor-arg>
	<constructor-arg index="3"><value>com.softwareplumbers.dms.rest.server.core.SystemKeyPairs</value></constructor-arg>
    </bean>

    <bean id="tmp" class="com.softwareplumbers.dms.rest.server.tmp.TempRepositoryService" scope="singleton">
   	<constructor-arg index="0" ref="documentNavigatorService"/>
   	<constructor-arg index="1" value="filename"/>
    </bean>
    
    <bean id="cookieValidation" class="com.softwareplumbers.dms.rest.server.core.CookieRequestValidationService" scope="singleton">
        <constructor-arg index="0" ref="keymgr"/>
        <constructor-arg index="1" value="tmp"/>
    </bean>
    
    <bean id="signatureValidation" class="com.softwareplumbers.dms.rest.server.model.SignedRequestValidationService" scope="singleton">
        <constructor-arg index="0" ref="keymgr"/>
    </bean>
    
    <bean id="signonService" class="com.softwareplumbers.dms.rest.server.core.TemplateSignonService" scope="singleton">
        <constructor-arg index="0" value="http://localhost:6666/abc?relayState={relayState}"/>
    </bean>
    
    <bean id="dummyValidation" class="com.softwareplumbers.dms.rest.server.core.DummyRequestValidationService" scope="singleton">
        <constructor-arg index="0" value="tmp"/>
    </bean>
    
    <bean id="dummySignonService" class="com.softwareplumbers.dms.rest.server.core.DummySignonService" scope="singleton">
        <constructor-arg index="0" ref="dummyValidation"/>
    </bean>

    <bean id="auth.dummy" class="com.softwareplumbers.dms.rest.server.model.AuthenticationService" scope="singleton">
        <property name="RequestValidationService" ref="dummyValidation"/>
        <property name="SignonService" ref="dummySignonService"/>
    </bean>

    <bean id="auth.tmp" class="com.softwareplumbers.dms.rest.server.model.AuthenticationService" scope="singleton">
        <property name="RequestValidationService" ref="cookieValidation"/>
        <property name="SignedRequestValidationService" ref="signatureValidation"/>
        <property name="SignonService" ref="signonService"/>
        
    </bean>

    <bean id="RepositoryServiceFactory"
            class="org.springframework.beans.factory.config.ServiceLocatorFactoryBean">
        <property name="serviceLocatorInterface" value="com.softwareplumbers.dms.rest.server.core.RepositoryServiceFactory"/>
        <property name="serviceMappings">
            <props>
                <prop key="tmp">tmp</prop>
                <prop key="dummy">tmp</prop>
            </props>
        </property>
    </bean>
   
    <bean id="AuthenticationServiceFactory"
            class="org.springframework.beans.factory.config.ServiceLocatorFactoryBean">
    	<property name="serviceLocatorInterface" value="com.softwareplumbers.dms.rest.server.core.AuthenticationServiceFactory"/>
        <property name="serviceMappings">
            <props>
                <prop key="tmp">auth.tmp</prop>
                <prop key="dummy">auth.dummy</prop>
            </props>
        </property>
    </bean>

    <bean id="documentNavigatorService" class="com.softwareplumbers.dms.rest.server.model.ZipFileNavigatorService"/>
 

</beans>

